https://leetcode.com/problems/shuffle-the-array/submissions/

class Solution {
    public int[] shuffle(int[] nums, int n) {
        int len = nums.length;
        int i = 0, j = n,c=0;
        int res[] = new int[len];
        while(i<n && j<len)
        {
            res[c++]=nums[i];
            res[c++]=nums[j];
            i++;j++;
        }
        return res;
    }
}
